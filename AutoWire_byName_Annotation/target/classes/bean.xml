<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xmlns:context = "http://www.springframework.org/schema/context"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context.xsd">

   <context:annotation-config/>


   <bean id = "employee" class = "com.ibm.Employee">
   <property name="fullname" value="Rewanth Sai Simha"></property>
   </bean>


   <bean id = "currentAddress" class = "com.ibm.Address">
   <property name="city" value="Anantapur"></property>
   <property name="street" value="Tapovanam"></property>
   </bean>
   
   <bean id = "permanentAddress" class = "com.ibm.Address">
   <property name="city" value="Bangalore"></property>
   <property name="street" value="Hebbal"></property>
   </bean>
</beans>