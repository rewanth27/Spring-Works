<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="emp" class="com.ibm.Employee">
		<property name="id" value="1"></property>
		<property name="name" value="Rewanth Sai Simha"></property>
		<property name="address" ref="address1"></property>
	</bean>

	<bean id="address1" class="com.ibm.Address">
		<constructor-arg value="Tapovanam" type="String"></constructor-arg>
		<constructor-arg value="Anantapur" type="String"></constructor-arg>
	</bean>
</beans>
